        <Grid.RowDefinitions>
            <RowDefinition Height="237*"/>
            <RowDefinition Height="83*"/>
        </Grid.RowDefinitions>
        <MediaElement x:Name="MediaPlayer" Grid.RowSpan="1" LoadedBehavior="Manual" Margin="0,4,0,6"/>
