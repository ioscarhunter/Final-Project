            <Button Content="Play_Pause" HorizontalAlignment="Left" Height="145" VerticalAlignment="Top" Width="236" Background="#00DDDDDD" BorderBrush="#00DDDDDD" Foreground="#00DDDDDD" Canvas.Left="174" Canvas.Top="82" Click="Button_Click"/>
            <Canvas>
                <!-- Layer 1/<Path> -->
                <Path StrokeThickness="1.0" Stroke="#ff000000" StrokeMiterLimit="1.0" Fill="#ff000000" Data="F1 M 0.500,0.866 L 75.500,44.167 L 0.500,87.469 L 0.500,0.866 Z" Canvas.Left="217" Canvas.Top="115"/>
